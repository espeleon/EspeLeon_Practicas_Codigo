<Window x:Class="Calculadora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculadora"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lbl1" Content="Primer Número" HorizontalAlignment="Left" Margin="88,101,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl2" Content="Segundo Número" HorizontalAlignment="Left" Margin="88,159,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Num1" HorizontalAlignment="Left" Margin="209,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontWeight="Bold"/>
        <TextBox x:Name="Num2" HorizontalAlignment="Left" Margin="209,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontWeight="Bold"/>
        <Button x:Name="btnSum" Content="Suma" HorizontalAlignment="Left" Margin="361,105,0,0" VerticalAlignment="Top" Click="btnSum_Click"/>
        <Button x:Name="btnResta" Content="Resta" HorizontalAlignment="Left" Margin="361,165,0,0" VerticalAlignment="Top" Click="btnResta_Click"/>

    </Grid>
</Window>
